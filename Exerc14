package lpa2;
import java.util.Scanner;
public class Tamtam {

	public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        
        int soma = 0;
        int numero;
        
        while (true) {
            System.out.print("Digite um número: ");
            numero = ler.nextInt();
            
            if (numero < 0) {
                break; 
            }
            
            soma += numero;  
        }
        
        System.out.println("A soma dos números digitados é: " + soma);
        
        ler.close();
    }
}
