package lpa2;

import java.util.Scanner;

public class YES {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
        int i = 1, par = 0, num;

        while (i <= 20) {

            System.out.println("Informe o " + i + "° número:");
            num = ler.nextInt();
            if (num % 2 ==0) {
                par = par + 1;
            }
            i++;
        }
        System.out.println("Quantidade de números pares é : " + par);
        

    }

}
